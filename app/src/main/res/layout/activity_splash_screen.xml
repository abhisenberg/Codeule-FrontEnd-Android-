<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_material_dark_1"
    tools:context="com.example.abheisenberg.cccliveschedule.SplashScreen">

    <ImageView
        android:id="@+id/ssLogo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abhilogo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODING CONTESTS SCHEDULE"
        android:textColor="#ffffff"
        android:fontFamily="serif-monospace"
        android:textSize="22sp"
        android:layout_marginBottom="99dp"
        android:layout_alignBottom="@+id/ssLogo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
